{{>head}}
<body>
    {{>navbar data = details}}
    
    {{>slider slides = sliders}}

    {{!-- Banner-1 section --}}
    <section class="banner1_section py-3 background2">
        <div class="container text-center text-light">
            <div class="row">
                <div class="col-md-12">
                    <h2>{{banner1.title}}</h2>
                    <p>{{banner1.subTitle}}</p>
                    <button class="btn btn-outline-primary">{{banner1.btnText}}</button>
                </div>
            </div>
        </div>
    </section>

    {{!-- Servies Section --}}
    <section id="services_section" class="py-3">
        <div class="container">
                <h2 class="text-center text-muted mb-4">Services that we provides</h2>
            <div class="row">

                {{#each services}}
                    <div class="col-md-4">
                        <div class="card my-2">
                            <div class="card-body">
                                <div class="container text-center py-3">
                                <i class="{{this.icon}} service_icon text-secondary"></i>
                                </div>
                                <h4 class="card-title">{{this.title}}</h4>
                                <p>{{this.description}}</p>
                                <a href="{{this.link}}">{{this.linkText}}</a>
                                <a href="#" class="ms-2">Support</a>
                            </div>
                        </div>
                    </div>
                {{/each}}

            </div>
        </div>
    </section>
    <div class="container"><hr></div>

    {{!--Banner-2 Section --}}
    <section class="banner2_section py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6 d-flex flex-column justify-content-center text-center">
                    <h3>{{banner2.title}}</h3>
                    <p>{{banner2.subTitle}}</p>
                    <div class="container">
                        <button class="btn btn-outline-primary">{{banner2.btnText}}</button>
                    </div>
                    
                </div>
                <div class="col-md-6 text-center py-2">
                    <img src="/static/images/graphics.jpg" class="img-fluid" style="height: 350px;" alt="">
                </div>
            </div>
        </div>
    </section>

    {{!--Banner-3 Section --}}
    <section class="banner3_section py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center py-2">
                    <img src="/static/images/graphics2.jpg" class="img-fluid" style="height: 300px;" alt="">
                </div>
                <div class="col-md-6 d-flex flex-column justify-content-center text-center">
                    <h3>{{banner3.title}}</h3>
                    <p>{{banner3.subTitle}}</p>
                        <div class="container">
                        <button class="btn btn-outline-primary">{{banner3.btnText}}</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{!-- Contact Section --}}
    <section id="contact_us_section" class="background1 py-3">
        <div class="container" style="width: 50%;">
            <h2 class="text-center text-light">Contact Us</h2>
            <div class="row">
                <div class="col-md-12">
                    <form action="/process-contact-form" method="post">

                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input name="name" type="text" class="form-control" id="name" aria-describedby="emailHelp">
                        </div>

                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Your Email address</label>
                            <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>

                        <div class="mb-3">
                            <label for="contactNumberField" class="form-label">Your contact number</label>
                            <input name="number" type="number" class="form-control" id="contactNumberField">
                        </div>

                        <div class="form-floating my-3 text-dark fw-lighter">
                            <textarea name="query" class="form-control" placeholder="Enter your query here" id="queryField" style="height: 100px"></textarea>
                            <label for="queryField">Your query</label>
                        </div>

                        <div class="container text-center">
                            <button type="submit" class="btn btn-dark px-4">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

